{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="quote-container-b">
    <h2 class="quote-header-b">{{ section.settings.quote_title }}</h2>
    <p class="quote-text-b">{{ section.settings.quote_text }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Quote Bosies",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "quote_title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "quote_text",
      "label": "Quote"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Quote Bosies",
      "category": "Text"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .quote-container-b {
    text-align: center;
    margin-left: 2.35rem;
    margin-right: 2.35rem;
    @media screen and (min-width: 990px) {
      margin-left: 27rem;
      margin-right: 27rem;
    }
  }

  .quote-header-b {
    color: #2a3b4e;
    text-align: center;
    -webkit-text-stroke-width: 0.25;
    -webkit-text-stroke-color: #2a3b4e;
    font-size: 1.4rem;
    font-style: normal;
    font-weight: 400;
    line-height: 103.4%; /* 16.544px */
    letter-spacing: 2.88px;
    text-transform: uppercase;
    font-family: var(--font-menu-sub);
    @media screen and (min-width: 750px) {
      font-size: 1.6rem;
    }
  }

  .quote-text-b {
    font-family: var(--font-heading-family-light);
    color: #2a3b4e;
    text-align: center;
    font-size: 2.6rem;
    padding: 0 1.5rem;
    font-style: normal;
    font-weight: 300;
    line-height: 106.4%; /* 42.56px */
    letter-spacing: -0.8px;
    @media screen and (min-width: 750px) {
      margin: 3rem 0 3rem 0;
      font-size: 4rem;
    }
  }
{% endstylesheet %}
