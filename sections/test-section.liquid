{% schema %}
{
  "name": "Product Showcase",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Check out our featured products below."
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Product 1"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Product 2"
    },
    {
      "type": "product",
      "id": "product_3",
      "label": "Product 3"
    }
  ],
  "presets": [
    {
      "name": "Product Showcase",
      "category": "Custom",
      "settings": {
        "section_title": "Our Bestsellers",
        "section_description": "Discover the most popular items from our collection."
      }
    }
  ]
}
{% endschema %}

<section class="product-showcase">
  <div class="container">
    <h2>{{ section.settings.section_title }}</h2>
    <p>{{ section.settings.section_description }}</p>
    <div class="products-grid"></div>
  </div>
</section>

<style>
  .product-showcase {
    padding: 40px 0;
    background-color: #f9f9f9;
  }
  .product-showcase h2 {
    text-align: center;
    margin-bottom: 20px;
  }
  .product-showcase p {
    text-align: center;
    margin-bottom: 40px;
  }
  .products-grid {
    display: flex;
    justify-content: space-around;
    gap: 20px;
  }
  .product-item {
    text-align: center;
    max-width: 250px;
  }
  .product-item img {
    width: 100%;
    height: auto;
    margin-bottom: 10px;
  }
</style>
