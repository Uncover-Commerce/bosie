{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top_mobile | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }

    .breadcrumbs {
      padding-inline: 0.4rem;
      font-size: 9px;
      @media screen and (min-width: 750px) {
        font-size: 11px;
      }
  a {
    font-family: var(--font-heading-font-family);
    font-weight: 400;
    color: var(--foreground-color);
      font-weight: 400;
      text-decoration: none;
      }
      .active-breadcrumb {
      color: #ACACAC;
      }
      }
      .breadcrumbs--last {
        color: #ACACAC;
      }
{%- endstyle -%}

<div
  id="{{ section.id }}"
  class="color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding"
  data-section-type="breadcrumb"
  data-section-id="{{ section.id }}"
>
  {% render 'breadcrumb', container: section.settings.brc_container %}
</div>

{% schema %}
{
  "name": "Breadcrumbs",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top_mobile",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom_mobile",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Breadcrumbs"
    }
  ]
}
{% endschema %}
