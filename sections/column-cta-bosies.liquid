{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="column-cta-container-b {% unless section.settings.full_width %}page-width{% endunless %} {% if section.settings.full_width %}content-container--full-width{% endif %} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}"
  style="{% if section.settings.background_color %}background-color: {{ section.settings.background_color }};{% endif %}"
>
  {% for block in section.blocks %}
    {% assign column_width = 100 | divided_by: section.blocks.size %}
    <div class="column-cta-column-b columns-{{ section.blocks.size }}" {{ block.shopify_attributes }}>
      {% if section.blocks.size == 1 %}
        {% assign image_width = 2880 %}
      {% elsif section.blocks.size == 2 %}
        {% assign image_width = 1920 %}
      {% else %}
        {% assign image_width = 1440 %}
      {% endif %}

      <div class="column-cta-image-wrapper-b" style="padding-bottom: {{ section.settings.image_ratio }}%;">
        {% if block.settings.image != blank %}
          {% assign image_height = image_width | divided_by: section.settings.image_ratio | round %}
          {% assign image_widths = '375,550,750,1100,1500,2200,3000' | split: ',' %}
          <img
            class="column-cta-image-b"
            src="{{ block.settings.image | image_url: width: image_width }}"
            srcset="
              {%- for width in image_widths -%}
                {{ block.settings.image | image_url: width: width }} {{ width }}w{% unless forloop.last %}, {% endunless %}
              {%- endfor -%}
            "
            sizes="(min-width: 750px) {{ column_width }}vw, 100vw"
            loading="lazy"
            width="{{ image_width }}"
            height="{{ image_height }}"
            alt="{{ block.settings.image.alt | escape }}"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg column-cta-image-b', image_width, image_height }}
        {% endif %}
      </div>
      <div class="column-cta-wrapper-b">
        {% if block.settings.title != blank %}
          <h3 class="h2">{{ block.settings.title | escape }}</h3>
        {% endif %}
        {% if block.settings.text != blank %}
          <div class="rte">{{ block.settings.text }}</div>
        {% endif %}
        {% if block.settings.button_label != blank and block.settings.button_link != blank %}
          <a
            href="{{ block.settings.button_link }}"
            class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
          >
            {{ block.settings.button_label | escape }}
          </a>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Custom Columns Bosies",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "t:sections.rich-text.settings.full_width.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 52
    },
    {
      "type": "range",
      "id": "image_ratio",
      "min": 0.5,
      "max": 1.5,
      "step": 0.1,
      "unit": "",
      "label": "Image aspect ratio",
      "default": 1.0
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Column title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "Use secondary button style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Columns Bosies",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ],
  "max_blocks": 3
}
{% endschema %}
{% stylesheet %}
  .column-cta-container-b {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .column-cta-column-b {
    width: 100%;
    margin-bottom: 20px;
  }

  @media screen and (min-width: 750px) {
    .columns-2 {
      width: calc(50% - 10px);
    }

    .columns-3 {
      width: calc(33.33% - 13.33px);
    }
  }

  .column-cta-image-wrapper-b {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .column-cta-image-b {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease-in-out;
  }

  .column-cta-column-b:hover .column-cta-image-b {
    transform: scale(1.05);
  }

  .column-cta-wrapper-b {
    padding: 20px;
    text-align: center;
  }

  .column-cta-wrapper-b h3 {
    margin-top: 0;
    font-size: 24px;
  }

  .column-cta-wrapper-b .rte {
    margin-bottom: 20px;
  }

  .button {
    display: inline-block;
    padding: 10px 20px;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .button--primary {
    background-color: #000;
    color: #fff;
  }

  .button--secondary {
    background-color: #fff;
    color: #000;
    border: 1px solid #000;
  }

  .button:hover {
    opacity: 0.8;
  }
{% endstylesheet %}
